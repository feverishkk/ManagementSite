<MudCard>
    <MudForm Model="@TShirtModel">
        <MudCardContent>
            <MudSelect Label="TShirts" @bind-Value="TShirtModel.TShirtId" For="@(()=>TShirtModel.TShirtId)">
                @foreach (var shirt in TShirts)
                {
                    <MudSelectItem Value="@shirt.TShirtId">@shirt.Name</MudSelectItem>
                }
            </MudSelect>
        </MudCardContent>
        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary"
                   @onclick="@(()=>OnSelect(TShirtModel))">
            Update
        </MudButton>
    </MudForm>
</MudCard>

@code {
    [Parameter]
    public IEnumerable<TShirt> TShirts { get; set; } = new List<TShirt>();

    [CascadingParameter]
    public string UserId{ get; set; }

    private TShirt TShirtModel { get; set; } = new TShirt();

    private async Task OnSelect(TShirt shirt)
    {
        ArrayList userInfo = new ArrayList();

        userInfo.Add(shirt.TShirtId);
        userInfo.Add(this.UserId);
        userInfo.Add("TShirt");
        await _updateItemHttpService.UpdateCustomerEquipment(userInfo);

        StateHasChanged();
    }



}
