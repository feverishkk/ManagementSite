<MudDialog>
    <DialogContent>
        <MudForm Model="@itemId">
            <MudTextField Label="BeltId" Value="itemId" ReadOnly="true" />
            <MudTextField Label="BeltName" Value="itemName" ReadOnly="true" />
            <img src="@itemImage" style="width:200px; height:100px;" />
            <MudText Typo="Typo.h4" Class="mt-2"> Are you sure? </MudText>
        </MudForm>

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public int itemId{ get; set; }
    [Parameter] public string itemName { get; set; }
    [Parameter] public string itemImage { get; set; }
    [Parameter] public Belt model { get; set; } = new();

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok<Belt>(model));
    }

    void Cancel()
    {
        MudDialog.Cancel();
    }


}