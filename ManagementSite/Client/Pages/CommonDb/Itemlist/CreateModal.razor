<MudDialog>
    <DialogContent>
        <MudForm Model="@model">
            <MudNumericField Label="BeltId" @bind-Value="model.BeltId" For="@(()=>model.BeltId)" />
            <MudTextField Label="Image" @bind-Value="model.Image" For="@(()=>model.Image)" />
            <MudTextField Label="Name" @bind-Value="model.Name" For="@(()=>model.Name)" />
            <MudNumericField Label="AC" @bind-Value="model.AC" For="@(()=>model.AC)" />
            <MudTextField Label="Class" @bind-Value="model.Class" For="@(()=>model.Class)" />
            <MudTextField Label="Description" @bind-Value="model.Description" For="@(()=>model.Description)" />
        </MudForm>

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public Belt model { get; set; } = new();

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok<Belt>(model));
    }

    void Cancel()
    {
        MudDialog.Cancel();
    }


}