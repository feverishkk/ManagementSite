@page "/itemlist/totaleqp"
@attribute [Authorize (Roles = "SuperAdministrator, ServerAdministrator, Basic")]

<MudTable Items="@TotalEquipments">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Equipment List</MudText>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>No</MudTh>
        <MudTh>Image</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>AC</MudTh>
        <MudTh>Class</MudTh>
        <MudTh>Description</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="No">@context.TotalEqpId</MudTd>
        <MudTd DataLabel="Image">
            <img src="@context.Image" style="height:100px; width:100px" />
        </MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="AC">@context.AC</MudTd>
        <MudTd DataLabel="Class">@context.Class</MudTd>
        <MudTd DataLabel="Description">@context.Description</MudTd>
    </RowTemplate>
    <PagerContent>
    <MudTablePager PageSizeOptions="pageSizeOptions"></MudTablePager>
    </PagerContent>
</MudTable>


@code {
    private int[] pageSizeOptions = new int[] { 5, 10, 15, 50, 100 };

    private TotalEquipment totalWeapons = new();
    private IEnumerable<TotalEquipment> TotalEquipments { get; set; } = new List<TotalEquipment>();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        await base.OnInitializedAsync();
    }

    private async Task LoadData()
    {
        TotalEquipments = await _getItemHttpService.GetAllEquipment();
    }

}